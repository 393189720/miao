{
  "manifest_version": 2,
  "name": "我的秒杀助手",
  "description": "我的秒杀助手",
  "version": "1.0",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "assets/js/showtime.js",
        "assets/js/zepto.min.js"
      ],
      "matches": [
        "*://*.taobao.com/*",
        "*://*.tmall.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "contextMenus",
    "notifications",
    "management",
    "http://*/*",
    "https://*/*",
    "notifications",
    "alarms",
    "geolocation",
    "background"
  ],
  "icons": {
    "128": "128x128.ico",
    "16": "48x48.ico",
    "48": "64x64.ico"
  }
}
